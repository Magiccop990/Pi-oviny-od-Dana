from tkinter import *
import subprocess
from colorama import Fore, Style

ink = 0
nor = 0

win = Tk()
win.title("Search Bar")


def search_nor():
    url = entry.get()
    print(f"{Fore.GREEN} [TASK] {Style.RESET_ALL} Openning {url} ")
    subprocess.Popen(["C:\Program Files (x86)\Google\Chrome\Application\chrome.exe", url])
    win.quit()

def search_ink():
    url = entry.get()
    print(f"{Fore.GREEN} [TASK] {Style.RESET_ALL} Openning {url}")
    subprocess.Popen(["C:\Program Files (x86)\Google\Chrome\Application\chrome.exe", "-incognito", url])


def search():
    global ink, nor
    if ink==1:
        search_ink()
    elif nor == 1:
        search_nor()


def INK():
    global ink, nor
    if ink == 1:
        pass
    else:
        ink = 1
        nor = 0
        print(f"{Fore.CYAN} [INFO] {Style.RESET_ALL} Your mode is now Incognito")



def NOR():
    global ink, nor
    if nor == 1:
        pass
    else:
        ink = 0
        nor = 1
        print(f"{Fore.CYAN} [INFO] {Style.RESET_ALL} Your mode is now Normal")




label1 = Label(win, text="Enter URL Here:", font=("arial", 10, "bold"))
label1.grid(row=0, column=0)

entry = Entry(win, width=30)
entry.grid(row=0, column=1)

button = Button(win, text="Search", command=search)
button.grid(row=1, column=0, columnspan=2, pady=10)

buttonINK = Button(win, text="Inkognito", command=INK)
buttonINK.grid(row=1, column=0, columnspan=1, pady=10)

buttonNOR = Button(win, text="Normal", command=NOR)
buttonNOR.grid(row=1, column=1, columnspan=1, pady=20)

win.bind_all('<Return>', search)

win.mainloop()
